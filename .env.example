# ============================================================
# DataOS / Station Manager — Environment Variables
# ============================================================
# Copy this file to .env and fill in your values.
# .env is git-ignored and will NOT be committed.
# Vite exposes VITE_* vars to the browser — do NOT put secrets here.
# ============================================================

# ── API ────────────────────────────────────────────────────────
# Base URL for the backend API (leave empty for local mock mode)
VITE_API_URL=

# ── Feature Flags (all OFF by default for zero-cost) ──────────
VITE_FEATURE_AI=false
VITE_FEATURE_REALTIME=false
VITE_FEATURE_FILE_UPLOADS=false
VITE_FEATURE_ANALYTICS=false
VITE_FEATURE_EXTERNAL_AUTH=false

# ── Cloudflare (deploy only — set as GitHub Actions secrets) ──
# CLOUDFLARE_API_TOKEN=
# CLOUDFLARE_ACCOUNT_ID=

# ── Vercel (optional — set as GitHub Actions secrets) ─────────
# VERCEL_TOKEN=
# VERCEL_ORG_ID=
# VERCEL_PROJECT_ID=

# ── Sentry (optional — disabled by default) ───────────────────
# VITE_SENTRY_DSN=
